{
  "compilerOptions": {    
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src/",
    "target": "es5",
    "outDir": "./dist",
    "sourceMap": true,
  },  
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "src/electron-starter.js",
    "src/electron-wait-react.ts"
  ]
}